    let currentLang = "ka";

    function setLang(lang) {
      currentLang = lang;
      document.getElementById("main-title").innerText = texts[lang].title;
      document.getElementById("main-text").innerText = texts[lang].main;
      document.getElementById("more-text").innerText = texts[lang].more;
      document.getElementById("accordion1").innerText = texts[lang].block1;

      document.querySelectorAll(".lang-switch button").forEach(btn => btn.classList.remove("active"));
      document.getElementById("btn-" + lang).classList.add("active");
    }

    function toggleMore() {
      const moreText = document.getElementById("more-text");
      moreText.style.display = moreText.style.display === "block" ? "none" : "block";
    }

    function toggleAccordion() {
      const acc = document.getElementById("accordion1");
      acc.style.display = acc.style.display === "block" ? "none" : "block";
    }

    // Init default
    setLang("ka");
  </script>
</body>
</html>






